
<div class="content-block post-list-view mt--30">
    {% if bookReview.frontImage != null %}
        <div class="post-thumbnail">
                <img src="{{ bookReview.frontImage.url }}" alt="Post Images">
        </div>
    {% endif %}
    <div class="post-content">
        {% block card_content %}
        <div class="post-cat">
            <div class="post-cat-list">
                {% set categoryName = bookReview.book.category.name  %}
                <a class="hover-flip-item-wrapper" href="{{ url('category',{'name' : categoryName}) }}">
                                            <span class="hover-flip-item">
                                                <span data-text="{{ categoryName }}">{{categoryName }}</span>
                                            </span>
                </a>
            </div>
        </div>
            <h4 class="title"><a href="{{ redirectURL }}">{{ bookReview.title }}</a></h4>


        <div class="post-meta-wrapper">
            <div class="post-meta">
                <div class="content">
                    <h6 class="post-author-name">
                        <a class="hover-flip-item-wrapper" href="{{ url('user_profile',{'id': bookReview.creator.id}) }}">
                                                    <span class="hover-flip-item">
                                                        <span data-text="{{ bookReview.creator.username }}">{{ bookReview.creator.username}}</span>
                                                    </span>
                        </a>
                    </h6>
                    <ul class="post-meta-list">
                        <li>{{ bookReview.creationDate|date('d-m-Y') }}</li>
                        {% if bookReview.estimatedReadTime != null %}
                            <li>{{ bookReview.estimatedReadTime}} min read</li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
        {% endblock %}
    </div>
</div>