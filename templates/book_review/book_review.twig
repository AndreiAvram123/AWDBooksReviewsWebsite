{% extends 'base.html.twig' %}
{% block mainContent %}
    <div class="post-single-wrapper axil-section-gap bg-color-white">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <!-- Start Banner Area -->
                    <div class="banner banner-single-post post-formate post-layout pb--40">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <!-- Start Single Slide  -->
                                    <div class="content-block">
                                        <!-- Start Post Content  -->
                                        <div class="post-content">
                                            <div class="post-cat">
                                                <div class="post-cat-list">
                                                    <a class="hover-flip-item-wrapper" href="#">
                                                            <span class="hover-flip-item">
                                                                <span data-text="FEATURED POST">FEATURED POST</span>
                                                            </span>
                                                    </a>
                                                </div>
                                            </div>
                                            <h1 class="title">{{ bookReview.title }}</h1>
                                            <!-- Post Meta  -->
                                            <div class="post-meta-wrapper">
                                                <div class="post-meta">
                                                    <div class="post-author-avatar border-rounded">
                                                        <img src="{{ bookReview.creator.profileImage.url }}" alt="Author Images">
                                                    </div>
                                                    <div class="content">
                                                        <h6 class="post-author-name">
                                                            <a class="hover-flip-item-wrapper" href="{{ url('get_user_by_id',{'id' : bookReview.creator.id}) }}">
                                                                    <span class="hover-flip-item">
                                                                        <span data-text="{{ bookReview.creator.username }}">{{ bookReview.creator.username }}</span>
                                                                    </span>
                                                            </a>
                                                        </h6>
                                                        <ul class="post-meta-list">
                                                            <li>{{ bookReview.creationDate|date('d-m-Y') }}</li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- End Post Content  -->
                                    </div>
                                    <!-- End Single Slide  -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Banner Area -->


                    <!-- Start Blog Details  -->
                    <div class="axil-post-details">
                        {% for bookSection in bookReview.sections %}
                            {{ include('book_review/book_review_section.twig') }}
                        {% endfor %}

                        <div class="tagcloud">
                            <a href="#">Design</a>
                            <a href="#">Life Style</a>
                            <a href="#">Web Design</a>
                            <a href="#">Development</a>
                            <a href="#">Design</a>
                            <a href="#">Life Style</a>
                        </div>



                        <div class="about-author">
                            <div class="flex-media">
                                <div class="post-author-avatar border-rounded">
                                    <img src="{{ bookReview.creator.profileImage.url }}" alt="Author Images">
                                </div>
                                <div class="media-body">
                                    <div class="author-info">
                                        <h5 class="title">
                                            <a class="hover-flip-item-wrapper" href="#">
                                                    <span class="hover-flip-item">
                                                        <span data-text= {{ bookReview.creator.username}}>{{ bookReview.creator.username}}</span>
                                                    </span>
                                            </a>
                                        </h5>
                                        <span class="b3 subtitle">{{ bookReview.creator.nickname }}</span>
                                    </div>
                                    <div class="content">
                                        <p class="b1 description">{{ bookReview.creator.description }}</p>
                                        {% set user = bookReview.creator %}
                                        {{ include('user/user_social_hub.twig') }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{ form_start(ratingForm) }}
                        <div class="rating-block">
                            <div class="post-like">
                             <span>{{ bookReview.rating.likes}} Likes</span>
                             {{ form_widget(ratingForm.like_button)}}
                            </div>
                            <div class="post-dislike">
                            <span>{{ bookReview.rating.dislikes}}  Dislikes</span>
                                {{ form_widget(ratingForm.dislike_button)}}
                            </div>
                        {{ form_end(ratingForm) }}

                        <!-- Start Comment Form Area  -->
                        <div class="axil-comment-area">
                            <div class="axil-total-comment-post">
                                <div class="title">
                                    <h4 class="mb--0">30+ Comments</h4>
                                </div>
                                <div class="add-comment-button cerchio">
                                    <a class="axil-button button-rounded" href="post-details.html" tabindex="0"><span>Add Your Comment</span></a>
                                </div>
                            </div>


                            {%  if is_granted('IS_AUTHENTICATED_FULLY') %}
                            {{ form_start(commentForm) }}
                            <div class="comment-respond">
                                <h4 class="title">Post a comment</h4>
                                    <div class="row row--10">
                                        <div class="col-12">
                                            <div class="form-group">
                                            {{ form_widget(commentForm.summary) }}
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="form-submit cerchio">
                                                {{ form_widget(commentForm.post_comment_button) }}
                                            </div>
                                        </div>
                                    </div>
                            </div>
                            {{ form_end(commentForm) }}

