<!-- Start Single Post  -->
<div class="content-block post-medium mb--20">
    <div class="post-thumbnail">

        {% if featuredReview.frontImage is not  null %}
            <img src="{{ featuredReview.frontImage.url }}" alt="Post Images">
         {% endif %}
    </div>
    <div class="post-content">
        <h6 class="title"><a href="{{ url('book_path',{'id' : featuredReview.id}) }}">{{ featuredReview.title}} </a></h6>
        <div class="post-meta">
            <ul class="post-meta-list">
                <li>{{ featuredReview.creator.username }}</li>
                <li>{{ featuredReview.creationDate|date('d-m-Y') }}</li>
            </ul>
        </div>
    </div>
</div>