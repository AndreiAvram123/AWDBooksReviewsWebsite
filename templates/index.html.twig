{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>

    {% block mainContent %}
        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    <div class="col">
                        {% for bookReview in allReviews %}
                            {% if loop.index % 3 == 1 %}
                                {{ include('book_review/book_review_card.html.twig') }}
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="col">
                        {% for bookReview in allReviews %}
                            {% if loop.index % 3 == 2 %}
                                {{ include('book_review/book_review_card.html.twig') }}
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="col">
                        {% for bookReview in allReviews %}
                            {% if loop.index % 3 == 0 %}
                                {{ include('book_review/book_review_card.html.twig') }}
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}
