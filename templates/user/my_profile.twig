{% extends 'base.html.twig' %}
{% block  mainContent%}

    <div class="main-wrapper">
        <div class="container">
        <div class="axil-author-area axil-author-banner bg-color-grey">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="about-author">
                            <div class="media" style="display: flex">
                                <div class="thumbnail">
                                    <img class="author-thumbnail" src="{{ user.profileImage.url }}" alt="Author Images">
                                </div>
                                <div class="media-body">
                                    <div class="author-info">
                                        <h1 class="title">{{ user.username }} </h1>
                                        <span class="b3 subtitle">{{ user.nickname }}</span>
                                    </div>
                                    <div class="content">
                                        <p class="b1 description">
                                            {% if user.description != null %}
                                                {{ user.description }}
                                            {% else %}
                                                {{ "It is often hard to describe ourselves" }}
                                            {% endif %}
                                        </p>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>

            </div>


            <div class="axil-post-list-area axil-section-gap bg-color-white">
            <div class="row mt-3">
                <div class="col-lg-12">
                    <div>
                        <h2>Edit your details</h2>
                        {{ form_start(userForm) }}
                        <div class="row form-group">
                            {{ form_row(userForm.username) }}
                            {{ form_row(userForm.nickname) }}
                            {{ form_row(userForm.description) }}
                            {{ form_row(userForm.profile_image) }}
                            <div class="form-submit cerchio mt-5">
                                {{ form_widget(userForm.Save) }}
                            </div>
                        </div>
                        {{ form_end(userForm) }}
                    </div>
                </div>
            </div>
            </div>
        </div>
        </div>
        <!-- End Author Area  -->

        <!-- Start Post List Wrapper  -->
        <div class="axil-post-list-area axil-section-gap bg-color-white">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="page-title">
                            <h2 class="title mb--40">My reviews</h2>
                        </div>
                    </div>
                    <div class="col-lg-8 col-xl-8">
                        {% for bookReview in user.bookReviews %}
                            {{ include('book_review/book_review_card.twig') }}
                        {% endfor %}
                    </div>

                </div>
            </div>
        </div>

{% endblock %}