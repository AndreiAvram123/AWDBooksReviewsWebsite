
{% extends 'base.html.twig' %}

{% block mainContent %}

        <!-- Start Author Area  -->
        <div class="axil-author-area axil-author-banner bg-color-grey">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="about-author">
                            <div class="media" style="display: flex">
                                <div class="thumbnail">
                                    <img class="author-thumbnail" src="{{ user.profileImage.url }}" alt="Author Images">
                                </div>
                                <div class="media-body">
                                    <div class="author-info">
                                        <h1 class="title">{{ user.username }} </h1>
                                        <span class="b3 subtitle">{{ user.nickname }}</span>
                                    </div>
                                    <div class="content">
                                        <p class="b1 description">
                                        {% if user.description != null %}
                                            {{ user.description }}
                                            {% else %}
                                            {{ "It is often hard to describe ourselves" }}
                                       {% endif %}
                                        </p>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="axil-post-list-area axil-section-gap bg-color-white">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="page-title">
                            <h2 class="title mb--40">Articles By This Author</h2>
                        </div>
                    </div>
                    <div class="col-lg-8 col-xl-8">
                       {% for bookReview in user.bookReviews %}
                           {{ include('book_review/book_review_card.twig') }}
                        {% endfor %}
                    </div>

                </div>
            </div>
        </div>
{% endblock %}