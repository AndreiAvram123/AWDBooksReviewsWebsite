{% extends 'base.html.twig' %}

{% block title %}Create Author{% endblock %}

{% block mainContent %}
    <div class="axil-post-list-area axil-section-gap bg-color-white">
        <div class="container">
            {{ form_start(createAuthorForm) }}
            <div class="row form-group">
                <div class="col">
                    <div class="mt-3">
                        {{ form_row(createAuthorForm.firstName) }}
                    </div>
                    <div class="mt-3">
                        {{ form_row(createAuthorForm.lastName) }}
                    </div>
                    <div class="form-submit cerchio mt-5">
                        {{ form_widget(createAuthorForm.save) }}
                    </div>
                </div>
                {{ form_end(createAuthorForm) }}
            </div>
        </div>
    </div>
{% endblock %}