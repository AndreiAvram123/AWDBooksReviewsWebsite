
<div class="content-block post-list-view mt--30">
    <div class="post-thumbnail">
        <img src="{{ googleBook.volumeInfo.imageLinks.thumbnail }}" alt="Book image">
    </div>
    <div class="post-content">
        {% block card_content %}
            <h4 class="title"><a href="{{ googleBook.volumeInfo.title}}">{{ googleBook.volumeInfo.title }}</a></h4>


            <div class="post-meta-wrapper">
                <div class="post-meta">
                    <div class="content">
                        <h6 class="post-author-name">
                            <a class="hover-flip-item-wrapper">
                                <ul>
                                    {% for author in googleBook.volumeInfo.authors %}
                                        <li><span data-text="{{ author}}">{{author}}</span></li>
                                    {% endfor %}
                                </ul>

                            </a>
                        </h6>
                    </div>
                </div>
            </div>
        {% endblock %}
    </div>
</div>